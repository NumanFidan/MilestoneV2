<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/custom_color_primary</item>
        <item name="colorPrimaryDark">@color/custom_color_primary_dark</item>
        <item name="colorAccent">@color/custom_color_accent</item>
    </style>

    <style name="CustomTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/CustomTheme.ActionBar.Text</item>
    </style>

    <style name="CustomTheme.ActionBar.Text" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
